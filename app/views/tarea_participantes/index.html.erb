                        $(".horas_exec" + tarea).val(horas_exec);
                        $(".avance_text" + tarea).text(avance + "%");
                        $(".avance_bar" + tarea).attr("style","width:100%;");
                        $(".link-revision" + tarea).hide();
                        $(".link-decision" + tarea).hide();
                        $(".aprobacion_text" + tarea).text('<%= t('.esperando_aprobacion') %>');
                    }
                    else if (columna == "4") {
